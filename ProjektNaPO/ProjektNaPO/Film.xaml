<Window x:Class="ProjektNaPO.Film"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektNaPO"
        mc:Ignorable="d"
        Title="Film" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Margin="10 0 10 0" Name="MoviesView" Grid.Row="1" Grid.ColumnSpan="2"/>
        <ListView Margin="10 0 10 0" Name="CartView" Grid.Row="3" Grid.ColumnSpan="2"/>
        <Button Name="AddToCart" Grid.Row="4" Content="Add to cart" Margin="5 5 5 5" Click="AddToCart_Click"/>
        <Button Name="ReomoveFromCart" Grid.Row="4" Content="Remove from cart" Margin="5 5 5 5" Grid.Column="1" Click="ReomoveFromCart_Click"/>
        <Label Content="Movies:" FontSize="9" Grid.Row="0"></Label>
        <Label Content="Cart:" FontSize="9" Grid.Row="2"></Label>
    </Grid>
</Window>
