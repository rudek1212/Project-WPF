<Window x:Class="ProjektNaPO.AdminLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektNaPO"
        mc:Ignorable="d"
        Title="AdminLogIn" Height="150" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="LOGIN" FontWeight="ExtraBold" Grid.Row="0"/>
        <Label Content="PASSWORD" FontWeight="ExtraBold" Grid.Row="1"/>
        <TextBox Grid.Row="0" Margin="100 5 10 5" Name="LoginBox" KeyDown="EnterCheck"/>
        <PasswordBox Grid.Row="1" Margin="100 5 10 5" Name="PasswordBox" KeyDown="EnterCheck"/>
        <Button Content="LOGIN" Grid.Row="2" Click="IsLoginOk"></Button>
    </Grid>
</Window>
